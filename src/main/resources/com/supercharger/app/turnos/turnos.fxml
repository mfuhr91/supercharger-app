<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.Cursor?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" fillWidth="false" prefHeight="428.0" prefWidth="565.0" spacing="20.0"
      xmlns="http://javafx.com/javafx/18" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.supercharger.app.controllers.TurnosController">
    <padding>
        <Insets bottom="40.0" left="40.0" right="40.0" top="40.0"/>
    </padding>
    <Label contentDisplay="CENTER" text="Turnos">
        <VBox.margin>
            <Insets bottom="10.0"/>
        </VBox.margin>
        <font>
            <Font size="20.0"/>
        </font>
    </Label>
    <HBox prefHeight="1.0" prefWidth="485.0">
        <children>
            <DatePicker fx:id="fechaTurnos" prefHeight="26.0" prefWidth="170.0" promptText="D/M/AAAA"/>
            <Button alignment="CENTER" contentDisplay="CENTER" onAction="#onNuevoTurnoClick" prefWidth="100.0"
                    styleClass="" text="Nuevo Turno">
                <HBox.margin>
                    <Insets left="218.0"/>
                </HBox.margin>
            </Button>
        </children>
    </HBox>
    <TableView fx:id="table" prefHeight="216.0" prefWidth="485.0">
        <columns>
            <TableColumn fx:id="nombreCliente" prefWidth="90.0" text="Cliente"/>
            <TableColumn fx:id="nombreMecanico" prefWidth="90.0" text="MecÃ¡nico"/>
            <TableColumn fx:id="ingresado" prefWidth="82.0" text="Ingresado"/>
            <TableColumn fx:id="vehiculo" minWidth="4.0" prefWidth="144.0" text="Vehiculo"/>
            <TableColumn fx:id="opciones" prefWidth="77.0" resizable="false" text="Opciones"/>
        </columns>
        <cursor>
            <Cursor fx:constant="HAND"/>
        </cursor>
    </TableView>
    <Button fx:id="volverButton" onAction="#onVolverClick" prefWidth="70.0" styleClass="" text="Volver">
        <VBox.margin>
            <Insets/>
        </VBox.margin>
    </Button>
</VBox>
