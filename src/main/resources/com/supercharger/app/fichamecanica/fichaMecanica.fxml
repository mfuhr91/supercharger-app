<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" fillWidth="false" prefHeight="428.0" prefWidth="565.0" spacing="20.0"
      xmlns="http://javafx.com/javafx/18" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.supercharger.app.controllers.FichasController">
    <padding>
        <Insets bottom="40.0" left="40.0" right="40.0" top="40.0"/>
    </padding>
    <Label contentDisplay="CENTER" text="Ficha Mecánica">
        <VBox.margin>
            <Insets bottom="10.0"/>
        </VBox.margin>
        <font>
            <Font size="20.0"/>
        </font>
    </Label>
    <HBox prefHeight="1.0" prefWidth="485.0">
        <children>
            <Label prefHeight="26.0" prefWidth="80.0" text="Fecha Turno:"/>
            <TextField fx:id="fechaTurno" editable="false"/>
        </children>
    </HBox>
    <HBox prefHeight="1.0" prefWidth="485.0">
        <children>
            <Label prefHeight="26.0" prefWidth="80.0" text="Cliente:"/>
            <TextField fx:id="cliente" editable="false"/>
        </children>
    </HBox>
    <HBox prefHeight="1.0" prefWidth="485.0">
        <children>
            <Label prefHeight="26.0" prefWidth="80.0" text="Mecánico:"/>
            <TextField fx:id="mecanico" editable="false"/>
        </children>
    </HBox>
    <HBox prefHeight="1.0" prefWidth="485.0">
        <children>
            <Label prefHeight="26.0" prefWidth="80.0" text="Actividad:"/>
            <TextArea fx:id="actividad" prefHeight="39.0" prefWidth="400.0"/>
        </children>
    </HBox>
    <HBox prefHeight="1.0" prefWidth="485.0">
        <children>
            <Label prefHeight="26.0" prefWidth="80.0" text="Insumos:"/>
            <TextArea fx:id="insumos" prefHeight="41.0" prefWidth="400.0"/>
        </children>
    </HBox>
    <HBox alignment="CENTER" prefHeight="1.0" prefWidth="485.0">
        <children>
            <Button fx:id="volverButton" onAction="#onVolverClick" prefWidth="70.0" styleClass="" text="Volver"/>
            <Button alignment="CENTER" onAction="#onGuardarFichaClick" prefWidth="70.0" styleClass=""
                    text="Guardar">
                <HBox.margin>
                    <Insets left="20.0"/>
                </HBox.margin>
            </Button>
        </children>
    </HBox>
</VBox>
