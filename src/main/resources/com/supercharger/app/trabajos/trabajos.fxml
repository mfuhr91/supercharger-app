<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" fillWidth="false" prefHeight="428.0" prefWidth="565.0" spacing="20.0" xmlns="http://javafx.com/javafx/18" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.supercharger.app.controllers.TrabajosController">
    <padding>
        <Insets bottom="40.0" left="40.0" right="40.0" top="40.0" />
    </padding>
    <Label contentDisplay="CENTER" text="Trabajos Diarios">
        <VBox.margin>
            <Insets bottom="10.0" />
        </VBox.margin>
        <font>
            <Font size="20.0" />
        </font>
    </Label>
    <HBox prefHeight="1.0" prefWidth="485.0">
        <children>
            <Label prefHeight="26.0" prefWidth="80.0" text="Fecha:" />
            <DatePicker onAction="#onFechaChange" fx:id="fecha" promptText="D/M/AAAA" />
        </children>
    </HBox>
    <HBox prefHeight="1.0" prefWidth="485.0">
        <children>
            <Label prefHeight="26.0" prefWidth="80.0" text="Especialidad:" />
            <ComboBox onAction="#onEspChange" fx:id="espComboBox" prefHeight="26.0" prefWidth="185.0" promptText="Seleccionar especialidad" />
        </children>
    </HBox>
    <TableView fx:id="table" prefHeight="108.0" prefWidth="486.0">
        <columns>
            <TableColumn fx:id="especialidad" prefWidth="105.0" text="Especialidad" />
            <TableColumn fx:id="cliente" prefWidth="152.0" text="Cliente" />
            <TableColumn fx:id="mecanico" prefWidth="129.0" text="MecÃ¡nico" />
            <TableColumn fx:id="tiempo" prefWidth="97.0" text="Tiempo" />
        </columns>
    </TableView>
    <Label fx:id="textoOK" prefHeight="52.0" prefWidth="381.0" text="Listado generado correctamente en" textFill="#e44a4a" visible="false" wrapText="true" />
    <HBox alignment="CENTER" prefHeight="1.0" prefWidth="485.0">
        <children>
            <Button fx:id="volverButton" onAction="#onVolverClick" prefWidth="70.0" styleClass="" text="Volver" />
            <Button fx:id="imprimirButton" alignment="CENTER" onAction="#onImprimirClick" prefWidth="70.0" styleClass="" text="Imprimir">
                <HBox.margin>
                    <Insets left="20.0" />
                </HBox.margin>
            </Button>
        </children>
    </HBox>
</VBox>
